<!-- Central Modal Medium Info -->
<form [formGroup]="editClientInfoForm" (ngSubmit)="editClientInfo(editClientInfoForm.value)" autocomplete="off" *ngIf="client">
     @Html.AntiForgeryToken()
    <!--Modal: Register Form-->
    <div class="modal fade" id="editClientInfo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog cascading-modal" role="document">
            <!--Content-->
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header light-blue darken-3 white-text">
                    <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="title"><i class="fa fa-user-plus"></i> Update Client Info </h4>
                </div>
                <!--Body-->
                <div class="modal-body">
                    <div class="row">
                        <input type="hidden" #clientId name="Id"  [value]="client.Id">
                        <div class="col-md-12" [ngClass]="{'error':CompanyName.invalid && CompanyName.dirty}">
                            <div class="md-form">
                                <input [(ngModel)]="client.CompanyName" formControlName="CompanyName" value="{{client.CompanyName}}" type="text" id="CompanyName" class="form-control">
                                <label class="active" for="CompanyName">CompanyName</label>
                                <label *ngIf="CompanyName.invalid && CompanyName.dirty">CompanyName is required</label>
                            </div>
                        </div>
                        <div class="col-md-12" [ngClass]="{'error':Country.invalid && Country.dirty}">
                            <div class="md-form">
                                <input [(ngModel)]="client.Country" formControlName="Country" value="{{client.Country}}" type="text" id="Country" class="form-control">
                                <label class="active" for="Country">Country</label>
                                <label *ngIf="Country.invalid && Country.dirty">Country is required</label>
                            </div>
                        </div>
                        <div class="col-md-12" [ngClass]="{'error':Address.invalid && Address.dirty}">
                            <div class="md-form">
                                <input [(ngModel)]="client.Address" formControlName="Address" value="{{client.Address}}" type="text" id="Address" class="form-control">
                                <label class="active" for="Address">Address</label>
                                <label *ngIf="Address.invalid && Address.dirty">Address is required</label>
                            </div>
                        </div>
                        <div class="col-md-12" [ngClass]="{'error':Email.invalid && Email.dirty}">
                            <div class="md-form">
                                <input [(ngModel)]="client.Email" formControlName="Email" value="{{client.Email}}" type="text" id="Email" class="form-control">
                                <label class="active" for="Email">Email</label>
                                <label *ngIf="Email.invalid && Email.dirty">Email is required</label>
                            </div>
                        </div>
                        <div class="col-md-12" [ngClass]="{'error':PhoneNumber.invalid && PhoneNumber.dirty}">
                            <div class="md-form">
                                <input [(ngModel)]="client.PhoneNumber" formControlName="PhoneNumber" value="{{client.PhoneNumber}}" type="text" id="PhoneNumber" class="form-control">
                                <label class="active" for="PhoneNumber">Phone</label>
                                <label *ngIf="PhoneNumber.invalid && PhoneNumber.dirty">Phone is required</label>
                            </div>
                        </div>
                        <div class="col-md-12" [ngClass]="{'error':Website.invalid && Website.dirty}">
                            <div class="md-form">
                                <input [(ngModel)]="client.Website" formControlName="Website" value="{{client.Website}}" type="text" id="Website" class="form-control">
                                <label class="active" for="Website">Website</label>
                                <label *ngIf="Website.invalid && Website.dirty">Website is required</label>
                            </div>
                        </div>
                         <div class="col-md-12" [ngClass]="{'error':Industry.invalid && Industry.dirty}">
                            <label>Industry</label>
                            <select formControlName="Industry" [(ngModel)]="client.Industry" class="form-control">
                                <option value="">Select Industry</option>
                                <option value="Technology">Technology</option>
                                <option value="Finance">Finance</option>
                                <option value="Ecommerce">Ecommerce</option>
                                <option value="Healthcare">Healthcare</option>
                                <option value="Construction">Construction</option>
                                <option value="Other">Other</option>
                            </select>
                            <label *ngIf="Industry.invalid && Industry.dirty">Industry is required</label>
                        </div>
                    </div>

                    <div class="text-center mt-2">
                        <button type="submit" [disabled]="editClientInfoForm.invalid" class="btn btn-info">Update<i class="fa fa-save" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
            <!--/.Content-->
        </div>
    </div>
    <!--Modal: Register Form-->
</form>
<!-- Central Modal Medium Info-->