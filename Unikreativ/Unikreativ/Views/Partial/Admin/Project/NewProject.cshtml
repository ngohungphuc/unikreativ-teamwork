<!-- Central Modal Medium Info -->
<form [formGroup]="newProjectForm" (ngSubmit)="newProject(newProjectForm.value,clientName)" autocomplete="off">
    <!--Modal: Register Form-->
    <div class="modal fade" id="newProject" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog cascading-modal" role="document">
            <!--Content-->
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header light-blue darken-3 white-text">
                    <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="title"><i class="fa fa-user-plus"></i> New Project </h4>
                </div>
                <!--Body-->
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form">
                                <input formControlName="projectName" type="text" id="projectName" class="form-control">
                                <label class="active" for="projectName">Project Name</label>
                                <label *ngIf="newProjectForm.get('projectName').touched && newProjectForm.get('projectName').hasError('required')">Project Name is required</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="md-form">
                                <input formControlName="user" type="text" id="user" #clientName  value="{{client}}" class="form-control" (keyup)="searchClients(clientName.value)">
                                <label class="active" for="user">Client Name</label>
                                <label *ngIf="newProjectForm.get('user').touched && newProjectForm.get('user').hasError('required')">Client Name is required</label>
                                <div id="searchClientResult" *ngIf="showResult">
                                    <ul class="list-group">
                                        <li *ngFor="let client of clientList" class="list-group-item"><span (click)="selectClient($event.target.innerText)">{{client.UserName}}</span> - Company {{client.CompanyName}}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="md-form">
                                <i class="fa fa-pencil prefix"></i>
                                <textarea formControlName="projectDescription" type="text" id="projectDescription" class="md-textarea"></textarea>
                                <label class="active" for="projectDescription">Project Description </label>
                                <label *ngIf="newProjectForm.get('projectDescription').touched && newProjectForm.get('projectDescription').hasError('required')">Project Description is required</label>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-2">
                        <button type="submit" [disabled]="newProjectForm.invalid" class="btn btn-info">Save<i class="fa fa-save" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
            <!--/.Content-->
        </div>
    </div>
    <!--Modal: Register Form-->
</form>
<!-- Central Modal Medium Info-->