<div class="tabs-wrapper">
    <ul class="nav classic-tabs tabs-primary" role="tablist">
        <li class="nav-item">
            <a class="nav-link waves-light active" data-toggle="tab" href="#panelMembers" role="tab"><i class="fa fa-user fa-2x" aria-hidden="true"></i><br> Members</a>
        </li>
        <li class="nav-item">
            <a class="nav-link waves-light" data-toggle="tab" href="#panelClients" role="tab"><i class="fa fa-user-md fa-2x" aria-hidden="true"></i><br> Clients</a>
        </li>
    </ul>
</div>

<div class="tab-content card">
    <div class="tab-pane fade in show active" id="panelMembers" role="tabpanel">
        <div class="row mb-0">
            <div class="col-md-12">
                <div class="card-block pt-0">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr class="primary-color">
                                    <th>Name</th>
                                    <th>CompanyName</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>JobTitle</th>
                                    <th>Primary Role</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="table-border">
                                <tr *ngFor="let teamMember of teamMembers">
                                    <td>{{teamMember.normalizedUserName}}</td>
                                    <td>{{teamMember.companyName}}</td>
                                    <td>{{teamMember.email}}</td>
                                    <td>{{teamMember.phone}}</td>
                                    <td>{{teamMember.jobTitle}}</td>
                                    <td>{{teamMember.role}}</td>
                                    <td class="action-btn">
                                        <a class="btn-floating btn-md blue"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                        <a class="btn-floating btn-md red"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="panelClients" role="tabpanel">
        <div class="row mb-0">
            <div class="col-md-12">
                <div class="card-block pt-0">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr class="primary-color">
                                    <th>CompanyName</th>
                                    <th>Address</th>
                                    <th>Country</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Industry</th>
                                    <th>Website</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="table-border">
                                <tr *ngFor="let client of clients">
                                    <td>{{client.companyName}}</td>
                                    <td>{{client.address}}</td>
                                    <td>{{client.country}}</td>
                                    <td>{{client.email}}</td>
                                    <td>{{client.phoneNumber}}</td>
                                    <td>{{client.industries}}</td>
                                    <td>{{client.website}}</td>
                                    <td class="action-btn">
                                        <a class="btn-floating btn-md blue" data-toggle="modal" data-target="#centralModalInfo"><i class="fa fa-pencil" aria-hidden="true" (click)="selectClient(client)"></i></a>
                                        <a class="btn-floating btn-md red"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<client-edit [client]="client"></client-edit>