<div class="card" id="login-form">
    <div class="card-block">
        <form [formGroup]="loginForm" (ngSubmit)="login(loginForm.value)" autocomplete="off">
            @Html.AntiForgeryToken()
            <div class="text-center">
                <img src="~/images/logo.png" id="team-logo" />
                <hr class="mt-2 mb-2">
            </div>

            <div class="md-form" [ngClass]="{'error':username.invalid && username.dirty}">
                <i class="fa fa-envelope prefix"></i>
                <input formControlName="username" type="text" id="username" class="form-control">
                <label for="username">Your username</label>
                <label *ngIf="username.invalid && username.dirty">Username is required</label>
            </div>

            <div class="md-form" [ngClass]="{'error':password.invalid && password.dirty}">
                <i class="fa fa-lock prefix"></i>
                <input formControlName="password" type="password" id="password" class="form-control">
                <label for="password">Your password</label>
                <label *ngIf="password.invalid && password.dirty">Password is required</label>
            </div>

            <div class="text-center">
                <button type="submit" [disabled]="loginForm.invalid" class="btn btn-primary btn-rounded waves-effect waves-light">Login</button>
            </div>
        </form>
    </div>

    <div class="modal-footer">
        <div class="options">

            <p>Forgot <a href="#">Password?</a></p>
        </div>
    </div>
</div>